<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>To-Do list</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
      defer
    ></script>

    <%- include("header") %>
  </head>
  <body>
    <form action="/" method="post">
      <button name="dayOffset" onClick="this.form.submit()" value="-1">Previous day</button>
      <h1><%= day %></h1>
      <button name="dayOffset" onClick="this.form.submit()" value="1">Next day</button>
    </form>

    <ul class="box">
      <li class="item">
        <p class="heading">Done</p>
        <p>Task</p>
      </li>
      <% toDoList.forEach(listItem => { %>
      <li class="item">
        <form action="/remove" method="post">
          <input type="checkbox" onChange="this.form.submit()" name="remove" value="<%= listItem._id %>" />
        </form>
        <p><%= listItem.todo %></p>
      </li>
      <% }) %>
    </ul>
    <form action="/add" method="post">
      <input name="newToDo" type="text" placeholder="New to-do item" />
      <button type="submit">+</button>
    </form>
  </body>
  <%- include("footer") %>
</html>
